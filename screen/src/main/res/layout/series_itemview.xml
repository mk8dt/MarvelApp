<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/size_xs"
    android:background="@drawable/bg_item_view"
    android:padding="@dimen/size_s">


    <ImageView
        android:id="@+id/series_image_itemview"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/series_title_itemview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_s"
        android:textColor="@color/black"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/series_image_itemview" />

    <TextView
        android:id="@+id/series_description_itemview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_xs"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/series_title_itemview" />

    <TextView
        android:id="@+id/start_year_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_xs"
        android:text="@string/from"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/series_description_itemview" />

    <TextView
        android:id="@+id/start_year_itemview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/size_xs"
        android:layout_marginTop="@dimen/size_xs"
        app:layout_constraintLeft_toRightOf="@id/start_year_label"
        app:layout_constraintTop_toBottomOf="@id/series_description_itemview" />

    <TextView
        android:id="@+id/end_year_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_xs"
        android:layout_marginEnd="@dimen/size_xs"
        android:text="@string/until"
        app:layout_constraintRight_toLeftOf="@id/end_year_itemview"
        app:layout_constraintTop_toBottomOf="@id/series_description_itemview" />

    <TextView
        android:id="@+id/end_year_itemview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_xs"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/series_description_itemview" />

</androidx.constraintlayout.widget.ConstraintLayout>